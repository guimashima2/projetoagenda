<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Cultivo</h1>
      <p class="text-center lead">Crie ou edite seu Cultivo abaixo.</p>

      <%- include('includes/messages') %>

      <% if(cultivo._id) { %>
      <form action="/cultivo/edit/<%= cultivo._id %>" method="POST">
      <% } else { %>
      <form action="/cultivo/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Temperatura</label>
          <input value="<%= cultivo.temperatura %>" type="number" step="0.01" class="form-control" name="temperatura">
        </div>
        <div class="form-group">
          <label>Umidade</label>
          <input value="<%= cultivo.umidade %>" type="number" step="0.01" class="form-control" name="umidade">
        </div>
        <div class="form-group">
          <label>Nivel de Nutrientes</label>
          <input value="<%= cultivo.nivelNutrientes %>" type="number" step="0.01" class="form-control" name="nivelNutrientes">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
